---
// Hero section with animated background
---

<section class="hero">
  <div class="hero-bg">
    <div class="water-drops">
      <div class="drop"></div>
      <div class="drop"></div>
      <div class="drop"></div>
      <div class="drop"></div>
      <div class="drop"></div>
    </div>
  </div>

  <div class="container">
    <div class="hero-content">
      <div class="hero-text">
        <span class="hero-badge">24/7 Emergency Service</span>
        <h1 class="hero-title">
          Expert Plumbing <br />
          <span class="highlight">Solutions</span> You Can Trust
        </h1>
        <p class="hero-description">
          From leaky faucets to complete bathroom remodels, our licensed professionals
          deliver quality workmanship with honest, upfront pricing.
        </p>
        <div class="hero-cta">
          <a href="/contact" class="btn btn-primary">Get Free Quote</a>
          <a href="tel:+1234567890" class="btn btn-outline">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
            Call Now
          </a>
        </div>
        <div class="hero-stats">
          <div class="stat">
            <span class="stat-number">15+</span>
            <span class="stat-label">Years Experience</span>
          </div>
          <div class="stat">
            <span class="stat-number">5000+</span>
            <span class="stat-label">Happy Clients</span>
          </div>
          <div class="stat">
            <span class="stat-number">100%</span>
            <span class="stat-label">Satisfaction</span>
          </div>
        </div>
      </div>

      <div class="hero-image">
        <div class="hero-image-wrapper">
          <svg class="plumber-illustration" viewBox="0 0 400 400" xmlns="http://www.w3.org/2000/svg">
            <!-- Background circle -->
            <circle cx="200" cy="200" r="180" fill="var(--primary)" opacity="0.1"/>
            <circle cx="200" cy="200" r="150" fill="var(--primary)" opacity="0.1"/>

            <!-- Pipe illustration -->
            <g class="pipes">
              <rect x="50" y="150" width="300" height="30" rx="5" fill="var(--gray)" opacity="0.3"/>
              <rect x="100" y="120" width="30" height="80" rx="5" fill="var(--gray)" opacity="0.3"/>
              <rect x="270" y="120" width="30" height="80" rx="5" fill="var(--gray)" opacity="0.3"/>
            </g>

            <!-- Wrench -->
            <g class="wrench" transform="translate(150, 200)">
              <rect x="0" y="30" width="100" height="20" rx="5" fill="var(--primary)"/>
              <circle cx="90" cy="40" r="30" fill="none" stroke="var(--primary)" stroke-width="15"/>
              <circle cx="10" cy="40" r="20" fill="var(--primary-dark)"/>
            </g>

            <!-- Water droplets -->
            <g class="water-animation">
              <ellipse cx="200" cy="300" rx="15" ry="20" fill="var(--accent)" class="droplet drop1"/>
              <ellipse cx="160" cy="320" rx="10" ry="15" fill="var(--accent)" class="droplet drop2"/>
              <ellipse cx="240" cy="310" rx="12" ry="18" fill="var(--accent)" class="droplet drop3"/>
            </g>
          </svg>
          <div class="floating-badge badge-1">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
              <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
            <span>Licensed & Insured</span>
          </div>
          <div class="floating-badge badge-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
            <span>Fast Response</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    padding: 80px 0 100px;
    overflow: hidden;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  }

  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    pointer-events: none;
  }

  .water-drops .drop {
    position: absolute;
    width: 20px;
    height: 30px;
    background: var(--accent);
    border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
    opacity: 0.1;
    animation: dropletFall 3s ease-in-out infinite;
  }

  .water-drops .drop:nth-child(1) { left: 10%; animation-delay: 0s; }
  .water-drops .drop:nth-child(2) { left: 25%; animation-delay: 0.5s; }
  .water-drops .drop:nth-child(3) { left: 50%; animation-delay: 1s; }
  .water-drops .drop:nth-child(4) { left: 75%; animation-delay: 1.5s; }
  .water-drops .drop:nth-child(5) { left: 90%; animation-delay: 2s; }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .hero-badge {
    display: inline-block;
    background: rgba(0, 102, 204, 0.1);
    color: var(--primary);
    padding: 8px 20px;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 20px;
  }

  .hero-title {
    font-size: 3.5rem;
    line-height: 1.1;
    margin-bottom: 25px;
    color: var(--dark);
  }

  .hero-title .highlight {
    background: linear-gradient(135deg, var(--primary), var(--accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-description {
    font-size: 1.15rem;
    color: var(--gray);
    margin-bottom: 30px;
    line-height: 1.7;
  }

  .hero-cta {
    display: flex;
    gap: 15px;
    margin-bottom: 40px;
  }

  .hero-cta .btn {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .hero-stats {
    display: flex;
    gap: 40px;
  }

  .stat {
    text-align: center;
  }

  .stat-number {
    display: block;
    font-size: 2rem;
    font-weight: 800;
    color: var(--primary);
  }

  .stat-label {
    font-size: 0.85rem;
    color: var(--gray);
  }

  .hero-image {
    position: relative;
  }

  .hero-image-wrapper {
    position: relative;
    animation: float 4s ease-in-out infinite;
  }

  .plumber-illustration {
    width: 100%;
    max-width: 450px;
    margin: 0 auto;
    display: block;
  }

  .droplet {
    animation: dropletFall 2s ease-in-out infinite;
  }

  .drop1 { animation-delay: 0s; }
  .drop2 { animation-delay: 0.3s; }
  .drop3 { animation-delay: 0.6s; }

  .floating-badge {
    position: absolute;
    background: var(--white);
    padding: 12px 20px;
    border-radius: 12px;
    box-shadow: var(--shadow-lg);
    display: flex;
    align-items: center;
    gap: 10px;
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--dark);
  }

  .floating-badge svg {
    color: var(--primary);
  }

  .badge-1 {
    top: 10%;
    right: 0;
    animation: float 3s ease-in-out infinite;
  }

  .badge-2 {
    bottom: 20%;
    left: -20px;
    animation: float 3.5s ease-in-out infinite;
    animation-delay: 0.5s;
  }

  @media (max-width: 900px) {
    .hero-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-cta {
      justify-content: center;
      flex-wrap: wrap;
    }

    .hero-stats {
      justify-content: center;
    }

    .hero-image {
      order: -1;
    }

    .floating-badge {
      display: none;
    }
  }
</style>

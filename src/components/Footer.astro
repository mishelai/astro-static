---
const currentYear = new Date().getFullYear();
const base = (import.meta.env.BASE_URL || '/').replace(/\/$/, '');

const footerLinks = {
  services: [
    { label: 'Emergency Repairs', href: `${base}/services#emergency` },
    { label: 'Drain Cleaning', href: `${base}/services#drain` },
    { label: 'Water Heaters', href: `${base}/services#water-heater` },
    { label: 'Leak Detection', href: `${base}/services#leak` },
  ],
  company: [
    { label: 'About Us', href: `${base}/about` },
    { label: 'Our Team', href: `${base}/about#team` },
    { label: 'Careers', href: `${base}/about#careers` },
    { label: 'Contact', href: `${base}/contact` },
  ],
};

const locations = [
  { name: 'Manhattan', address: '1234 Broadway, New York, NY 10001' },
  { name: 'Brooklyn', address: '5678 Brooklyn Ave, Brooklyn, NY 11201' },
];

const socials = [
  { name: 'Facebook', icon: 'facebook' },
  { name: 'Twitter', icon: 'twitter' },
  { name: 'Instagram', icon: 'instagram' },
  { name: 'LinkedIn', icon: 'linkedin' },
];

const socialIcons: Record<string, string> = {
  facebook: `<path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>`,
  twitter: `<path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>`,
  instagram: `<rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>`,
  linkedin: `<path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/>`,
};
---

<footer class="footer">
  <!-- Emergency CTA -->
  <div class="footer-cta">
    <div class="container">
      <div class="cta-inner">
        <div class="cta-content">
          <div class="cta-badge">
            <span class="pulse-dot"></span>
            <span>Available Now</span>
          </div>
          <h3>Ready to fix your plumbing?</h3>
          <p>Get a free quote or call us for immediate assistance.</p>
        </div>
        <div class="cta-actions">
          <a href="tel:+15555550123" class="btn btn-primary">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
            (555) 555-0123
          </a>
          <a href={`${base}/contact`} class="btn btn-outline">Get Free Quote</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Footer -->
  <div class="footer-main">
    <div class="container">
      <div class="footer-grid">
        <!-- Brand -->
        <div class="footer-brand">
          <a href={`${base}/`} class="footer-logo">
            <div class="logo-icon">
              <svg viewBox="0 0 32 32" fill="none">
                <circle cx="16" cy="16" r="14" stroke="currentColor" stroke-width="2"/>
                <path d="M16 8v8M16 24v-4M12 16h8" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"/>
                <circle cx="16" cy="16" r="3" fill="currentColor"/>
              </svg>
            </div>
            <span>ProPlumber</span>
          </a>
          <p class="footer-tagline">
            New York's premier plumbing service. Professional, reliable, and always on time.
          </p>
          <div class="footer-socials">
            {socials.map((social) => (
              <a href="#" aria-label={social.name} class="social-link">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" set:html={socialIcons[social.icon]} />
              </a>
            ))}
          </div>
        </div>

        <!-- Services Links -->
        <div class="footer-links">
          <h4>Services</h4>
          <ul>
            {footerLinks.services.map((link) => (
              <li>
                <a href={link.href}>{link.label}</a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Company Links -->
        <div class="footer-links">
          <h4>Company</h4>
          <ul>
            {footerLinks.company.map((link) => (
              <li>
                <a href={link.href}>{link.label}</a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Locations -->
        <div class="footer-locations">
          <h4>Service Areas</h4>
          {locations.map((location) => (
            <div class="location-item">
              <div class="location-icon">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                  <circle cx="12" cy="10" r="3"/>
                </svg>
              </div>
              <div class="location-info">
                <strong>{location.name}</strong>
                <span>{location.address}</span>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="footer-bottom">
    <div class="container">
      <div class="bottom-content">
        <p>&copy; {currentYear} ProPlumber. All rights reserved.</p>
        <div class="bottom-links">
          <a href="#">Privacy Policy</a>
          <a href="#">Terms of Service</a>
          <a href="#">Sitemap</a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--navy);
    color: var(--white);
    position: relative;
    overflow: hidden;
  }

  /* CTA Section */
  .footer-cta {
    background: linear-gradient(135deg, var(--copper) 0%, var(--brass) 100%);
    padding: var(--space-2xl) 0;
    position: relative;
  }

  .footer-cta::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      radial-gradient(circle at 20% 50%, rgba(255,255,255,0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 50%, rgba(255,255,255,0.05) 0%, transparent 50%);
  }

  .cta-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-xl);
    position: relative;
    z-index: 1;
  }

  .cta-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 6px 14px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-full);
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-sm);
  }

  .pulse-dot {
    width: 8px;
    height: 8px;
    background: var(--white);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  .cta-content h3 {
    font-family: var(--font-display);
    font-size: clamp(1.5rem, 3vw, 2rem);
    color: var(--white);
    margin-bottom: 4px;
  }

  .cta-content p {
    color: rgba(255, 255, 255, 0.8);
    font-size: 1rem;
  }

  .cta-actions {
    display: flex;
    gap: var(--space-md);
  }

  .cta-actions .btn-primary {
    background: var(--white);
    color: var(--copper-dark);
    box-shadow: var(--shadow-lg);
  }

  .cta-actions .btn-primary:hover {
    background: var(--cream);
  }

  .cta-actions .btn-outline {
    border-color: rgba(255, 255, 255, 0.4);
    color: var(--white);
  }

  .cta-actions .btn-outline:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--white);
  }

  /* Main Footer */
  .footer-main {
    padding: var(--space-3xl) 0;
    background:
      linear-gradient(rgba(0, 0, 0, 0.2), transparent),
      var(--navy);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1.2fr;
    gap: var(--space-2xl);
  }

  /* Brand */
  .footer-logo {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: var(--space-md);
  }

  .footer-logo .logo-icon {
    width: 44px;
    height: 44px;
    background: var(--gradient-copper);
    border-radius: var(--radius);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }

  .footer-logo .logo-icon svg {
    width: 26px;
    height: 26px;
  }

  .footer-logo span {
    font-family: var(--font-display);
    font-size: 1.4rem;
    font-weight: 800;
    color: var(--white);
  }

  .footer-tagline {
    color: var(--slate-light);
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: var(--space-lg);
    max-width: 280px;
  }

  .footer-socials {
    display: flex;
    gap: var(--space-sm);
  }

  .social-link {
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--slate-light);
    transition: var(--transition);
  }

  .social-link:hover {
    background: var(--gradient-copper);
    border-color: var(--copper);
    color: var(--white);
  }

  /* Links */
  .footer-links h4,
  .footer-locations h4 {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 700;
    color: var(--white);
    margin-bottom: var(--space-lg);
  }

  .footer-links ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .footer-links a {
    color: var(--slate-light);
    font-size: 0.95rem;
    transition: var(--transition);
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }

  .footer-links a::before {
    content: '';
    width: 0;
    height: 2px;
    background: var(--copper);
    transition: var(--transition);
  }

  .footer-links a:hover {
    color: var(--white);
  }

  .footer-links a:hover::before {
    width: 12px;
  }

  /* Locations */
  .footer-locations {
    display: flex;
    flex-direction: column;
  }

  .location-item {
    display: flex;
    gap: var(--space-sm);
    padding: var(--space-md) 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .location-item:last-child {
    border-bottom: none;
  }

  .location-icon {
    width: 36px;
    height: 36px;
    background: rgba(200, 121, 65, 0.15);
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--copper);
    flex-shrink: 0;
  }

  .location-info {
    display: flex;
    flex-direction: column;
  }

  .location-info strong {
    font-family: var(--font-display);
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--white);
  }

  .location-info span {
    font-size: 0.85rem;
    color: var(--slate-light);
  }

  /* Bottom Bar */
  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    padding: var(--space-lg) 0;
  }

  .bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .bottom-content p {
    color: var(--slate);
    font-size: 0.85rem;
  }

  .bottom-links {
    display: flex;
    gap: var(--space-lg);
  }

  .bottom-links a {
    color: var(--slate);
    font-size: 0.85rem;
    transition: var(--transition);
  }

  .bottom-links a:hover {
    color: var(--copper-light);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .cta-inner {
      flex-direction: column;
      text-align: center;
    }

    .cta-badge {
      margin: 0 auto var(--space-sm);
    }

    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .footer-brand {
      grid-column: span 2;
      text-align: center;
    }

    .footer-tagline {
      max-width: 100%;
      margin: 0 auto var(--space-lg);
    }

    .footer-socials {
      justify-content: center;
    }
  }

  @media (max-width: 640px) {
    .cta-actions {
      flex-direction: column;
      width: 100%;
    }

    .cta-actions .btn {
      width: 100%;
      justify-content: center;
    }

    .footer-grid {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .footer-brand {
      grid-column: span 1;
    }

    .footer-logo {
      justify-content: center;
    }

    .footer-links ul {
      align-items: center;
    }

    .footer-links a::before {
      display: none;
    }

    .location-item {
      justify-content: center;
    }

    .bottom-content {
      flex-direction: column;
      gap: var(--space-md);
    }

    .bottom-links {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>

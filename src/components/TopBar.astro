---
// Premium Trust Bar Section
const trustItems = [
  {
    icon: 'phone',
    title: 'Call us 24/7',
    desc: '(555) 555-0123',
    highlight: true,
  },
  {
    icon: 'clock',
    title: '30-min response',
    desc: 'Fast emergency service',
    highlight: false,
  },
  {
    icon: 'shield',
    title: 'Licensed & Insured',
    desc: 'Certified professionals',
    highlight: false,
  },
  {
    icon: 'star',
    title: '4.9 Star Rating',
    desc: '500+ happy customers',
    highlight: false,
  },
];

const iconPaths: Record<string, string> = {
  phone: `<path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>`,
  clock: `<circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/>`,
  shield: `<path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/><path d="M9 12l2 2 4-4"/>`,
  star: `<polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>`,
};
---

<div class="trust-bar">
  <div class="container">
    <div class="trust-content">
      {trustItems.map((item, index) => (
        <div class="trust-item" class:list={[{ highlight: item.highlight }]} data-animate style={`--delay: ${index * 0.1}s`}>
          <div class="trust-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" set:html={iconPaths[item.icon]} />
          </div>
          <div class="trust-text">
            <span class="trust-title">{item.title}</span>
            <span class="trust-desc">{item.desc}</span>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>

<style>
  .trust-bar {
    background: var(--white);
    padding: var(--space-2xl) 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    position: relative;
    overflow: hidden;
  }

  .trust-bar::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--gradient-copper);
  }

  .trust-content {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-xl);
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-md);
    border-radius: var(--radius);
    transition: var(--transition);
    opacity: 0;
    transform: translateY(20px);
    transition-delay: var(--delay);
  }

  .trust-item.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  .trust-item:hover {
    background: var(--cream);
  }

  .trust-item.highlight {
    background: rgba(200, 121, 65, 0.08);
    border: 1px solid rgba(200, 121, 65, 0.15);
  }

  .trust-item.highlight:hover {
    background: rgba(200, 121, 65, 0.12);
  }

  .trust-icon {
    width: 52px;
    height: 52px;
    background: var(--cream);
    border-radius: var(--radius);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--copper);
    flex-shrink: 0;
    transition: var(--transition);
  }

  .trust-item:hover .trust-icon {
    background: var(--gradient-copper);
    color: var(--white);
  }

  .trust-item.highlight .trust-icon {
    background: var(--gradient-copper);
    color: var(--white);
  }

  .trust-text {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .trust-title {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 700;
    color: var(--navy);
  }

  .trust-desc {
    font-size: 0.875rem;
    color: var(--slate);
  }

  @media (max-width: 1024px) {
    .trust-content {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .trust-content {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }

    .trust-item {
      justify-content: center;
      text-align: center;
      flex-direction: column;
    }
  }
</style>

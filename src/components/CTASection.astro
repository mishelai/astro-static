---
// Premium CTA Section - Emergency Contact
const base = import.meta.env.BASE_URL;
---

<section class="cta-section">
  <div class="container">
    <div class="cta-content">
      <h2 class="cta-title">Have a plumbing emergency?</h2>
      <a href={`${base}/contact`} class="btn btn-primary">Contact us</a>
    </div>
  </div>
</section>

<style>
  .cta-section {
    background: var(--white);
    padding: 80px 0;
    border-top: 1px solid var(--gray-100);
    border-bottom: 1px solid var(--gray-100);
  }

  .cta-content {
    text-align: center;
  }

  .cta-title {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 500;
    color: var(--gray-500);
    margin-bottom: 24px;
  }

  .btn-primary {
    padding: 16px 32px;
    font-size: 1rem;
  }
</style>

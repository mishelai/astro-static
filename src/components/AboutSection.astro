---
// Premium About Section
const base = (import.meta.env.BASE_URL || '/').replace(/\/$/, '');

const stats = [
  { number: '20+', label: 'Years Experience' },
  { number: '5K+', label: 'Projects Completed' },
  { number: '98%', label: 'Customer Satisfaction' },
  { number: '24/7', label: 'Emergency Support' },
];

const features = [
  {
    icon: 'license',
    title: 'Licensed & Insured',
    desc: 'Fully certified plumbers with comprehensive insurance coverage.',
  },
  {
    icon: 'quality',
    title: 'Premium Materials',
    desc: 'Only the highest quality parts and equipment for lasting results.',
  },
  {
    icon: 'guarantee',
    title: 'Satisfaction Guaranteed',
    desc: 'Your complete satisfaction is our top priority, every single time.',
  },
];

const iconPaths: Record<string, string> = {
  license: `<path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/><path d="M9 12l2 2 4-4"/>`,
  quality: `<polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>`,
  guarantee: `<path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/>`,
};
---

<section class="about-section section">
  <div class="container">
    <div class="about-grid">
      <!-- Left: Image & Stats -->
      <div class="about-visual" data-animate="fade-right">
        <div class="visual-wrapper">
          <!-- Main Image Placeholder -->
          <div class="main-image">
            <svg viewBox="0 0 500 600" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect width="500" height="600" rx="24" fill="url(#imgBg)"/>
              <!-- Abstract plumbing illustration -->
              <g opacity="0.15">
                <rect x="80" y="100" width="340" height="40" rx="8" fill="white"/>
                <rect x="80" y="160" width="40" height="280" rx="8" fill="white"/>
                <rect x="380" y="160" width="40" height="280" rx="8" fill="white"/>
                <rect x="80" y="420" width="340" height="40" rx="8" fill="white"/>
                <circle cx="100" cy="120" r="20" fill="white"/>
                <circle cx="400" cy="120" r="20" fill="white"/>
                <circle cx="100" cy="440" r="20" fill="white"/>
                <circle cx="400" cy="440" r="20" fill="white"/>
              </g>
              <!-- Plumber figure -->
              <g transform="translate(150, 180)">
                <circle cx="100" cy="50" r="40" fill="rgba(255,255,255,0.2)"/>
                <rect x="60" y="100" width="80" height="100" rx="8" fill="rgba(255,255,255,0.25)"/>
                <rect x="30" y="110" width="40" height="20" rx="4" fill="rgba(255,255,255,0.2)"/>
                <rect x="130" y="110" width="40" height="20" rx="4" fill="rgba(255,255,255,0.2)"/>
              </g>
              <defs>
                <linearGradient id="imgBg" x1="0" y1="0" x2="500" y2="600">
                  <stop offset="0%" stop-color="#0a1628"/>
                  <stop offset="100%" stop-color="#132238"/>
                </linearGradient>
              </defs>
            </svg>

            <!-- Floating Badge -->
            <div class="image-badge">
              <span class="badge-number">20+</span>
              <span class="badge-text">Years of Excellence</span>
            </div>
          </div>

          <!-- Accent Image -->
          <div class="accent-image">
            <svg viewBox="0 0 200 200" fill="none">
              <rect width="200" height="200" rx="16" fill="url(#accentBg)"/>
              <circle cx="100" cy="100" r="50" stroke="rgba(255,255,255,0.3)" stroke-width="8" fill="none"/>
              <path d="M100 70v30l20 10" stroke="white" stroke-width="4" stroke-linecap="round"/>
              <defs>
                <linearGradient id="accentBg" x1="0" y1="0" x2="200" y2="200">
                  <stop offset="0%" stop-color="#c87941"/>
                  <stop offset="100%" stop-color="#d4a84b"/>
                </linearGradient>
              </defs>
            </svg>
          </div>
        </div>

        <!-- Stats Grid -->
        <div class="stats-grid">
          {stats.map((stat, index) => (
            <div class="stat-item" style={`--delay: ${index * 0.1}s`}>
              <span class="stat-number">{stat.number}</span>
              <span class="stat-label">{stat.label}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Right: Content -->
      <div class="about-content" data-animate="fade-left">
        <div class="section-label">
          <span class="badge">About Us</span>
        </div>

        <h2 class="about-title">
          New York's most trusted<br/>
          <span class="text-gradient">plumbing experts</span>
        </h2>

        <p class="about-text">
          For over two decades, ProPlumber has been the go-to choice for NYC homeowners
          and businesses. We combine old-school craftsmanship with modern technology
          to deliver plumbing solutions that stand the test of time.
        </p>

        <p class="about-text">
          Our team of certified professionals treats every job—big or small—with
          the same dedication and attention to detail that has earned us the trust
          of thousands of satisfied customers.
        </p>

        <!-- Features -->
        <div class="about-features">
          {features.map((feature) => (
            <div class="feature-item">
              <div class="feature-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" set:html={iconPaths[feature.icon]} />
              </div>
              <div class="feature-content">
                <h4>{feature.title}</h4>
                <p>{feature.desc}</p>
              </div>
            </div>
          ))}
        </div>

        <!-- CTA -->
        <div class="about-cta">
          <a href={`${base}/about`} class="btn btn-primary">
            Learn Our Story
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Background -->
  <div class="about-bg"></div>
</section>

<style>
  .about-section {
    position: relative;
    background: var(--white);
    overflow: hidden;
  }

  .about-bg {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse at 0% 50%, rgba(200, 121, 65, 0.03) 0%, transparent 50%),
      radial-gradient(ellipse at 100% 80%, rgba(212, 168, 75, 0.03) 0%, transparent 50%);
    pointer-events: none;
  }

  .about-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  /* Visual Section */
  .about-visual {
    position: relative;
  }

  .visual-wrapper {
    position: relative;
  }

  .main-image {
    position: relative;
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-xl);
  }

  .main-image svg {
    width: 100%;
    height: auto;
    display: block;
  }

  .image-badge {
    position: absolute;
    bottom: 24px;
    left: 24px;
    background: var(--white);
    padding: 16px 24px;
    border-radius: var(--radius);
    box-shadow: var(--shadow-lg);
    display: flex;
    flex-direction: column;
    animation: float 4s ease-in-out infinite;
  }

  .badge-number {
    font-family: var(--font-display);
    font-size: 2rem;
    font-weight: 800;
    color: var(--copper);
    line-height: 1;
  }

  .badge-text {
    font-size: 0.85rem;
    color: var(--slate);
    font-weight: 500;
  }

  .accent-image {
    position: absolute;
    bottom: -40px;
    right: -40px;
    width: 180px;
    border-radius: var(--radius);
    overflow: hidden;
    box-shadow: var(--shadow-xl);
    animation: float 5s ease-in-out infinite reverse;
  }

  .accent-image svg {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Stats Grid */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-md);
    margin-top: var(--space-2xl);
  }

  .stat-item {
    text-align: center;
    padding: var(--space-md);
    background: var(--cream);
    border-radius: var(--radius);
    transition: var(--transition);
  }

  .stat-item:hover {
    background: var(--white);
    box-shadow: var(--shadow);
    transform: translateY(-4px);
  }

  .stat-number {
    display: block;
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--copper);
    line-height: 1.2;
  }

  .stat-label {
    font-size: 0.75rem;
    color: var(--slate);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Content Section */
  .about-content {
    max-width: 540px;
  }

  .about-title {
    font-size: clamp(2rem, 4vw, 2.75rem);
    margin-bottom: var(--space-lg);
    margin-top: var(--space-md);
  }

  .about-text {
    font-size: 1.05rem;
    color: var(--slate);
    line-height: 1.7;
    margin-bottom: var(--space-md);
  }

  /* Features */
  .about-features {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
    margin: var(--space-2xl) 0;
  }

  .feature-item {
    display: flex;
    gap: var(--space-md);
    align-items: flex-start;
  }

  .feature-icon {
    width: 48px;
    height: 48px;
    background: rgba(200, 121, 65, 0.1);
    border-radius: var(--radius-sm);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--copper);
    flex-shrink: 0;
    transition: var(--transition);
  }

  .feature-item:hover .feature-icon {
    background: var(--gradient-copper);
    color: var(--white);
  }

  .feature-content h4 {
    font-family: var(--font-display);
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--navy);
    margin-bottom: 4px;
  }

  .feature-content p {
    font-size: 0.9rem;
    color: var(--slate);
    line-height: 1.5;
  }

  /* CTA */
  .about-cta {
    margin-top: var(--space-xl);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .about-grid {
      grid-template-columns: 1fr;
      gap: var(--space-3xl);
    }

    .about-content {
      max-width: 100%;
      text-align: center;
    }

    .about-features {
      align-items: center;
    }

    .feature-item {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .about-cta {
      display: flex;
      justify-content: center;
    }

    .accent-image {
      right: 0;
      bottom: -20px;
      width: 140px;
    }
  }

  @media (max-width: 640px) {
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .visual-wrapper {
      max-width: 400px;
      margin: 0 auto;
    }
  }
</style>

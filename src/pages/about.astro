---
import BaseLayout from '../layouts/BaseLayout.astro';
import CTASection from '../components/CTASection.astro';

const team = [
  { name: 'Mike Johnson', role: 'Founder & Master Plumber', initials: 'MJ' },
  { name: 'Sarah Williams', role: 'Operations Manager', initials: 'SW' },
  { name: 'David Chen', role: 'Lead Technician', initials: 'DC' },
  { name: 'Emily Rodriguez', role: 'Service Technician', initials: 'ER' },
];

const values = [
  { title: 'Integrity', desc: 'Honest pricing and transparent communication in everything we do.' },
  { title: 'Excellence', desc: 'Quality workmanship using the best materials and techniques.' },
  { title: 'Customer Focus', desc: 'Your satisfaction is our priority. We treat every home like our own.' },
  { title: 'Reliability', desc: 'Punctual, dependable service you can count on.' },
];
---

<BaseLayout
  title="About Us"
  description="Learn about our experienced team and commitment to quality plumbing services."
  currentPage="/about"
>
  <section class="page-hero">
    <div class="container">
      <h1>About Us</h1>
      <p>Your trusted plumbing partners since 2009</p>
    </div>
  </section>

  <section class="story-section section">
    <div class="container">
      <div class="story-grid">
        <div class="story-content">
          <h2 class="story-title">
            <span class="title-bold">Built on trust</span><br />
            <span class="title-light">& quality</span>
          </h2>
          <p>
            Plumbing was founded in 2009 with a vision to provide honest, reliable
            plumbing services that homeowners could trust. What started as a one-man
            operation has grown into a team of skilled professionals.
          </p>
          <p>
            Over the years, we've completed more than 5,000 jobs, from simple faucet
            repairs to complete plumbing system installations. Our growth has been
            driven by word-of-mouth recommendations from satisfied customers.
          </p>
          <div class="story-stats">
            <div class="stat">
              <span class="stat-number">15+</span>
              <span class="stat-label">Years Experience</span>
            </div>
            <div class="stat">
              <span class="stat-number">5000+</span>
              <span class="stat-label">Jobs Completed</span>
            </div>
            <div class="stat">
              <span class="stat-number">98%</span>
              <span class="stat-label">Satisfaction</span>
            </div>
          </div>
        </div>
        <div class="story-image">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300" class="placeholder-svg">
            <rect width="400" height="300" fill="var(--primary)" opacity="0.1" rx="16"/>
            <g transform="translate(100, 50)">
              <rect x="20" y="0" width="160" height="180" rx="10" fill="var(--primary)" opacity="0.15"/>
              <circle cx="100" cy="100" r="50" fill="var(--primary)" opacity="0.2"/>
            </g>
          </svg>
        </div>
      </div>
    </div>
  </section>

  <section class="values-section section">
    <div class="container">
      <h2 class="values-title text-center">
        <span class="title-bold">Our</span>
        <span class="title-light">values</span>
      </h2>
      <div class="values-grid">
        {values.map((value) => (
          <div class="value-card">
            <h3>{value.title}</h3>
            <p>{value.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="team-section section">
    <div class="container">
      <h2 class="team-title text-center">
        <span class="title-bold">Meet the</span>
        <span class="title-light">team</span>
      </h2>
      <div class="team-grid">
        {team.map((member) => (
          <div class="team-card">
            <div class="team-avatar">{member.initials}</div>
            <h3>{member.name}</h3>
            <span>{member.role}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <CTASection />
</BaseLayout>

<style>
  .section {
    padding: 100px 0;
  }

  .title-bold {
    font-weight: 700;
    color: var(--dark);
  }

  .title-light {
    font-weight: 400;
    color: var(--gray-400);
  }

  /* Story Section */
  .story-section {
    background: var(--white);
  }

  .story-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
  }

  .story-title {
    font-size: clamp(2rem, 4vw, 2.5rem);
    line-height: 1.15;
    margin-bottom: 24px;
  }

  .story-content p {
    color: var(--gray-500);
    line-height: 1.7;
    margin-bottom: 16px;
  }

  .story-stats {
    display: flex;
    gap: 40px;
    margin-top: 32px;
    padding-top: 32px;
    border-top: 1px solid var(--gray-200);
  }

  .stat {
    text-align: center;
  }

  .stat-number {
    display: block;
    font-size: 2rem;
    font-weight: 800;
    color: var(--primary);
  }

  .stat-label {
    font-size: 0.85rem;
    color: var(--gray-500);
  }

  .placeholder-svg {
    width: 100%;
    border-radius: var(--radius-xl);
  }

  /* Values Section */
  .values-section {
    background: var(--gray-50);
  }

  .values-title {
    font-size: clamp(2rem, 4vw, 2.5rem);
    margin-bottom: 48px;
  }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
  }

  .value-card {
    background: var(--white);
    padding: 32px;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
  }

  .value-card h3 {
    font-size: 1.1rem;
    margin-bottom: 12px;
    color: var(--dark);
  }

  .value-card p {
    font-size: 0.95rem;
    color: var(--gray-500);
    line-height: 1.6;
    margin: 0;
  }

  /* Team Section */
  .team-section {
    background: var(--white);
  }

  .team-title {
    font-size: clamp(2rem, 4vw, 2.5rem);
    margin-bottom: 48px;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 32px;
  }

  .team-card {
    text-align: center;
  }

  .team-avatar {
    width: 80px;
    height: 80px;
    background: var(--primary);
    color: var(--white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.25rem;
    margin: 0 auto 16px;
  }

  .team-card h3 {
    font-size: 1.1rem;
    margin-bottom: 4px;
    color: var(--dark);
  }

  .team-card span {
    font-size: 0.9rem;
    color: var(--gray-500);
  }

  @media (max-width: 900px) {
    .story-grid {
      grid-template-columns: 1fr;
      gap: 48px;
    }

    .values-grid,
    .team-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .values-grid,
    .team-grid {
      grid-template-columns: 1fr;
    }

    .story-stats {
      flex-direction: column;
      gap: 16px;
    }
  }
</style>

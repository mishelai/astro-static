---
import BaseLayout from '../layouts/BaseLayout.astro';
import ServicesSection from '../components/ServicesSection.astro';
import CTASection from '../components/CTASection.astro';
---

<BaseLayout
  title="Our Services"
  description="Comprehensive plumbing services including emergency repairs, drain cleaning, water heater installation, and more."
  currentPage="/services"
>
  <section class="page-hero">
    <div class="container">
      <div class="page-hero-content">
        <span class="page-label">What We Offer</span>
        <h1>Our Plumbing Services</h1>
        <p>
          From routine maintenance to emergency repairs, we provide comprehensive
          plumbing solutions for residential and commercial properties.
        </p>
      </div>
    </div>
  </section>

  <ServicesSection showAll={true} />

  <section class="why-choose section">
    <div class="container">
      <div class="why-grid">
        <div class="why-content">
          <span class="section-label">Why Choose Us</span>
          <h2 class="section-title">The ProPlumber Difference</h2>
          <p class="why-text">
            When you choose ProPlumber, you're choosing a team dedicated to excellence.
            Our commitment to quality workmanship and customer satisfaction sets us apart.
          </p>

          <div class="why-features">
            <div class="why-feature">
              <div class="why-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                </svg>
              </div>
              <div>
                <h4>Guaranteed Work</h4>
                <p>All our work is backed by a satisfaction guarantee</p>
              </div>
            </div>

            <div class="why-feature">
              <div class="why-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                  <line x1="1" y1="10" x2="23" y2="10"></line>
                </svg>
              </div>
              <div>
                <h4>Flexible Payment</h4>
                <p>Multiple payment options and financing available</p>
              </div>
            </div>

            <div class="why-feature">
              <div class="why-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                  <circle cx="9" cy="7" r="4"></circle>
                  <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
              </div>
              <div>
                <h4>Expert Team</h4>
                <p>Highly trained and certified professionals</p>
              </div>
            </div>

            <div class="why-feature">
              <div class="why-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"></path>
                </svg>
              </div>
              <div>
                <h4>Clean Service</h4>
                <p>We leave your home cleaner than we found it</p>
              </div>
            </div>
          </div>
        </div>

        <div class="why-image">
          <div class="why-image-wrapper">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 400" class="placeholder-svg">
              <rect width="400" height="400" fill="var(--primary)" opacity="0.1" rx="20"/>
              <g transform="translate(100, 80)">
                <rect x="50" y="0" width="100" height="200" rx="10" fill="var(--primary)" opacity="0.2"/>
                <rect x="70" y="20" width="60" height="30" rx="5" fill="var(--primary)" opacity="0.3"/>
                <circle cx="100" cy="120" r="40" fill="var(--primary)" opacity="0.3"/>
                <rect x="80" y="170" width="40" height="30" rx="5" fill="var(--primary)" opacity="0.3"/>
              </g>
              <text x="200" y="320" text-anchor="middle" fill="var(--primary)" font-size="16" font-weight="600" opacity="0.5">Quality Equipment</text>
            </svg>
            <div class="stats-badge">
              <span class="stats-number">5000+</span>
              <span class="stats-text">Jobs Completed</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <CTASection />
</BaseLayout>

<style>
  .page-hero {
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    color: var(--white);
    padding: 100px 0 80px;
    text-align: center;
  }

  .page-label {
    display: inline-block;
    background: rgba(255, 255, 255, 0.2);
    padding: 8px 20px;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 20px;
  }

  .page-hero h1 {
    font-size: 3rem;
    margin-bottom: 20px;
  }

  .page-hero p {
    font-size: 1.2rem;
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
  }

  .why-choose {
    background: var(--white);
  }

  .why-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .section-label {
    display: inline-block;
    color: var(--primary);
    font-weight: 600;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 15px;
  }

  .why-content .section-title {
    text-align: left;
    margin-bottom: 20px;
  }

  .why-text {
    color: var(--gray);
    line-height: 1.8;
    margin-bottom: 30px;
  }

  .why-features {
    display: grid;
    gap: 25px;
  }

  .why-feature {
    display: flex;
    gap: 15px;
    align-items: flex-start;
  }

  .why-icon {
    width: 55px;
    height: 55px;
    background: rgba(0, 102, 204, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary);
    flex-shrink: 0;
  }

  .why-feature h4 {
    font-size: 1.1rem;
    margin-bottom: 5px;
    color: var(--dark);
  }

  .why-feature p {
    color: var(--gray);
    font-size: 0.95rem;
    margin: 0;
  }

  .why-image-wrapper {
    position: relative;
  }

  .placeholder-svg {
    width: 100%;
    border-radius: 20px;
    box-shadow: var(--shadow-lg);
  }

  .stats-badge {
    position: absolute;
    bottom: -20px;
    left: -20px;
    background: var(--secondary);
    color: var(--white);
    padding: 20px 30px;
    border-radius: 15px;
    text-align: center;
    box-shadow: var(--shadow-lg);
  }

  .stats-number {
    display: block;
    font-size: 2rem;
    font-weight: 800;
    line-height: 1;
  }

  .stats-text {
    font-size: 0.85rem;
    opacity: 0.9;
  }

  @media (max-width: 900px) {
    .page-hero h1 {
      font-size: 2.2rem;
    }

    .why-grid {
      grid-template-columns: 1fr;
    }

    .why-image {
      order: -1;
      max-width: 400px;
      margin: 0 auto;
    }

    .why-content {
      text-align: center;
    }

    .why-content .section-title {
      text-align: center;
    }

    .why-feature {
      text-align: left;
    }
  }
</style>

---
import BaseLayout from '../layouts/BaseLayout.astro';
import ServicesSection from '../components/ServicesSection.astro';
import CTASection from '../components/CTASection.astro';
---

<BaseLayout
  title="Our Services"
  description="Comprehensive plumbing services including emergency repairs, drain cleaning, water heater installation, and more."
  currentPage="/services"
>
  <section class="page-hero">
    <div class="container">
      <h1>Our Services</h1>
      <p>Professional plumbing solutions for every need</p>
    </div>
  </section>

  <ServicesSection showAll={true} />
  <CTASection />
</BaseLayout>


---
import BaseLayout from '../layouts/BaseLayout.astro';
import ServicesSection from '../components/ServicesSection.astro';
import CTASection from '../components/CTASection.astro';
---

<BaseLayout
  title="Our Services"
  description="Comprehensive plumbing services including emergency repairs, drain cleaning, water heater installation, and more."
  currentPage="/services"
>
  <section class="page-hero">
    <div class="container">
      <h1>Our Services</h1>
      <p>Professional plumbing solutions for every need</p>
    </div>
  </section>

  <ServicesSection showAll={true} />
  <CTASection />
</BaseLayout>

<style>
  .page-hero {
    background: var(--primary);
    color: var(--white);
    padding: 80px 0 60px;
    text-align: center;
  }

  .page-hero h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 800;
    margin-bottom: 16px;
    color: var(--white);
  }

  .page-hero p {
    font-size: 1.2rem;
    opacity: 0.85;
    color: var(--white);
  }
</style>
